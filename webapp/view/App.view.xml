<mvc:View 
    controllerName="at.clouddna.training01.zhoui501.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    >
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <core:Fragment id="app_change_fragment" 
                        fragmentName="at.clouddna.training01.zhoui501.view.fragment.ChangeCustomer"
                        type="XML"/>
                    </content>
                    <footer>
                        <Bar>
                            <contentRight>
                                <Button id="app_save_button" text="{i18n>save}" type="Accept" icon="sap-icon://save" press="onSavePressed"></Button>
                            </contentRight>
                        </Bar>                        
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
