<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
  xmlns:f="sap.ui.layout.form">
    <f:SimpleForm id="edit_simpleform"
        editable="true"
        layout="ResponsiveGridLayout"
        title="{i18n>title}"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="3"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1"
        singleContainerFullSize="false" >
        <f:content>
            <Label id="edit_label_customerid" text="{i18n>app.customerid}"
            labelFor="edit_input_customerid"/>
            <Input id="edit_input_customerid" value="{/customerid}"/>

            <Label id="edit_label_firstname" text="{i18n>app.firstname}"
            labelFor="edit_input_firstname"/>
            <Input id="edit_input_firstname" value="{/firstname}"/>

            <Label id="edit_label_lastname" text="{i18n>app.lastname}"
            labelFor="edit_input_lastname"/>
            <Input id="edit_input_lastname" value="{/lastname}"/>

            <Label id="edit_label_title" text="{i18n>app.title}"
            labelFor="edit_input_title"/>
            <Input id="edit_input_title" value="{/title}"/>

            <Label id="edit_label_gender" text="{i18n>app.gender}"
            labelFor="edit_select_gender"/>
            <Select id="edit_select_gender" selectedKey="{/gender}"
            items="{genderModel>/genders}">
                <items>
                    <core:Item key="{genderModel>}" text="{path: 'genderModel>',
                    formatter: '.genderFormatter'}"/>
                </items>
            </Select>

            <Label id="edit_label_email" text="{i18n>app.email}"
            labelFor="edit_input_email"/>
            <Input id="edit_input_email" value="{/email}"/>

            <Label id="edit_label_phone" text="{i18n>app.phone}"
            labelFor="edit_input_phone"/>
            <Input id="edit_input_phone" value="{/phone}"/>

            <Label id="edit_label_website" text="{i18n>app.website}"
            labelFor="edit_input_website"/>
            <Input id="edit_input_website" value="{/website}"/>

        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>